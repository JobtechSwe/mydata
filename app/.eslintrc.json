{
  "parser": "babel-eslint",
  "extends": ["standard", "plugin:jest/recommended", "eslint:recommended", "plugin:react/recommended"],
  "plugins": ["jest"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "jsx-quotes": ["error", "prefer-double"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "object-curly-spacing": [2, "always"],
    "quotes": ["error", "single"],
    "react/prop-types": "off",
    "semi": ["error", "never"]
  }
}
